// this function replace the getValidUSBDevices() from archieved repo dynamix.vm.manager
function get_complete_usb_devices_infos()
{
	exec("lsusb 2>/dev/null", $arrAllUSBDevices);

	$arrToReturn = [];

	foreach ($arrAllUSBDevices as $strUSBDevice) {
		if (preg_match('/Bus (?P<bus>\d{3}) Device (?P<device>\d{3}): ID (?P<id_1>....):(?P<id_2>....) (?P<name>.*)/', $strUSBDevice, $newDevice)) {

			$newDevice["bus"] = (int)$newDevice["bus"];
			$newDevice["device"] = (int)$newDevice["device"];

			if (stripos($GLOBALS['var']['flashGUID'], $newDevice["id_1"] . "-" . $newDevice["id_2"]) === 0) {
				//Device id matches the unraid boot device, skip device
				continue;
			}

			if (strcmp($newDevice["id_1"],"1d6b") == 0 &&
					(strcmp($newDevice["id_2"], "0001") == 0 ||
					strcmp($newDevice["id_2"], "0002") == 0 ||
					strcmp($newDevice["id_2"], "0003") == 0)) {
					// in this case, the device is a hub
					continue;
			}

			$newDevice["id"] = $newDevice["id_1"] . ":" . $newDevice["id_2"];
			if (strcmp($newDevice["name"], "") == 0) {
					$newDevice["name"] = "[unnamed device] " . $newDevice["id_1"] . ":" . $newDevice["id_2"] . $newDevice["bus"] . " device:" . $newDevice["device"];
			} else {
					$newDevice["name"] = $newDevice["name"] . " | Bus:"  . $newDevice["bus"] . " Device:" . $newDevice["device"];
			}
			array_push($arrToReturn, $newDevice);
		}
	}

	return $arrToReturn;
}

